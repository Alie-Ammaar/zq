
<h2 align="center">Bill generation </h2>
	<div class="container">
		<%= form_for (@bill), html: {class: 'form-horizontal'} do  |f|%>
	
		<div class="form-group">
			<%= f.label :Plates_used, class: "col-xs-offset-2 col-xs-2 control-label" %>
			<div class="col-xs-6">
			<%= f.number_field :num_of_plates, class: "form-control", min: 1 %>
			</div>
		</div>
		<div class="form-group">
			<%= f.label :Colors, class: "col-xs-offset-2 col-xs-2 control-label" %>
			<div class="col-xs-6">
			<%= f.number_field :num_0f_colors, class: "form-control", min: 1 %>
			</div>
		</div>
		<div class="form-group">
			<%= f.label :Print_Rate, class: "col-xs-offset-2 col-xs-2 control-label" %>
			<div class="col-xs-6">
			<%= f.number_field :rate, class: "form-control", min: 1 %>
			</div>
		</div>
		<div class="form-group">
    		<div class="col-xs-offset-5 col-xs-6">
    		<%= f.submit "Generate Bill", class: "btn btn-primary btn-lg" %>
    	</div>
</div>
		
	</div>
<% end %>