<h2 align="center">All records</h2>

	<div  align= "center" class="container">
		<div class=" col-xs-8 col-xs-offset-2">
			<table>
				<tr>
					<th>Supplier</th>
					<th>Quality</th>
					<th>Size</th>
					<th>Quantity</th>
					<th>Create Job Card</th>
				</tr>
				<% @stock.each do |stock| %>
					<tr>
					<div class="col-xs-3">
						<td><%= stock.paper_from %></td>
					</div>
					<div class="col-xs-3">
						<td><%= stock.paper_type %></td>
					</div>
					<div class="col-xs-3">
						<td><%= stock.size %></td>
					</div>
					<div class="col-xs-2">
						<td><%= stock.quantity %></td>
					</div>
					<div class="col-xs-2">
						<td><%= link_to "Create", new_stock_jobcard_path(stock)%></td>
					</div>
					</tr>
				<% end %>
			</table>
	</div>
	</div>

