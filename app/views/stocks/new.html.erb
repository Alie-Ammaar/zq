<%= render 'shared/errors', obj: @stock %>
<div class="container">
<h2 align="center">add record</h2>
<%= form_for @stock, html: {class: 'form-horizontal'} do  |f|%>
<div class="form-group">
	<%= f.label :Supplier, class: "col-sm-2 control-label" %>
	<div class="col-sm-6">
		<%= f.text_field :paper_from, class: "form-control" %>
	</div>
</div>
<div class="form-group">
	<%= f.label :Type, class: "col-sm-2 control-label" %>
	<div class="col-sm-6">
		<%= f.text_field :paper_type, class: "form-control" %>
	</div>
</div>
<div class="form-group">
	<%= f.label :Quantity, class: "col-sm-2 control-label" %>
	<div class="col-sm-6">
		<%= f.number_field :quantity, class: "form-control", min:1 %>
	</div>
</div>
<div class="form-group">
	<%= f.label :Size, class: "col-sm-2 control-label" %>
	<div class="col-sm-6">
		<%= f.number_field :size, class: "form-control", min:1  %>
	</div>
<div class="form-group">
  <div class="col-sm-offset-2 col-sm-6 margin">
    <%= f.submit "Create", class: "btn btn-primary" %>
  </div>
</div>

</div>
<%end%>



