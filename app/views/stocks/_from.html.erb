<%= form_for @stock, html: {class: 'form-horizontal'} do  |f|%>

<div align="center" class="container">
	<div class="row">
	<div class="form-group">
		<%= f.label :Supplier, class: "col-xs-offset-1 col-xs-2 control-label" %>
		<div class="col-xs-6">
		<%= f.text_field :paper_from, class: "form-control" %>
		</div>
	</div>
	<div class="form-group">
		<%= f.label :'Paper type', class: "col-xs-offset-1 col-xs-2 control-label" %>
		<div class="col-xs-6">
			<%= f.text_field :paper_type, class: "form-control" %>
		</div>
	</div>
	<div class="form-group">
		<%= f.label :'Quantity(in RIM)', class: "col-xs-offset-1 col-xs-2 control-label" %>
		<div class="col-xs-6">
			<%= f.number_field :quantity, class: "form-control", min:1 %>
		</div>
	</div>
	<div class="form-group">
		<%= f.label :'Paper Size', class: "col-xs-offset-1 col-xs-2 control-label" %>
		<div class="col-xs-6">
			<%= f.number_field :size, class: "form-control", min:1  %>
		</div>
	</div>
	<div class="form-group">
		<%= f.label :'Gramage', class: "col-xs-offset-1 col-xs-2 control-label" %>
		<div class="col-xs-6">
			<%= f.number_field :gramage, class: "form-control", min:1  %>
		</div>
	</div>
	<div class="form-group">
	  <div class="col-xs-offset-3 col-xs-6 margin">
	    <%= f.submit "Submit", class: "btn btn-primary btn-lg" %>
	  </div>
	</div>
	</div>
</div>
<%end%>
